<div class="container mt-5 pt-5">
    {{#if usuario.length}}
    {{#each usuario}}
    <h1><img src="{{this.avatar}}" class="card-img-top" style="width: 60px;" alt="Foto do Perfil">Meus livros</h1>
    {{/each}}
    {{else}}
    <h1>Meus livros</h1>
    {{/if}}
    <div class="row">
        <!-- Cards de Livros -->
        <div class="col-md-12">
            {{#if livros}}
            <div class="row">
                {{#each livros}}
                <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <img src="/images/{{this.genero}}_img.jpg" class="card-img-top card-img-custom"
                            alt="{{this.titulo}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.titulo}}</h5>

                            <p class="card-text">{{this.formato}}</p>
                            
                            <div class="d-grid gap-2">
                                <a href="/livro/consulta/{{this._id}}" class="btn btn-sm btn-dark">Ver Detalhes</a>
                                <a class="btn btn-sm btn-outline-dark"
                                    href="/livro/atualizarProgresso/{{this._id}}">Adicionar Atualizações</a>
                                <p>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#deleteModal{{this._id}}"
                                        class="mx-1">
                                        <i class="bi bi-trash2-fill" id="icone-bi"> deletar livro</i>
                                    </a>
                                    <a href="/livro/alteraLivro/{{this._id}}">
                                        <i class="bi bi-arrow-up-circle-fill" id="icone-bi"> alterar livro</i>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal de Exclusão -->
                <div class="modal fade" id="deleteModal{{this._id}}" tabindex="-1"
                    aria-labelledby="deleteModalLabel{{this._id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="deleteModalLabel{{this._id}}">Atenção!!</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Você deseja realmente excluir o livro {{this.titulo}}? Você perderá todas as
                                    informações e progresso.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Não</button>
                                <a href="/livro/deleta/{{this._id}}"><button class="btn btn-dark">Sim</button></a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="card mt-5">
                <div class="card-body text-center">
                    <h5 class="card-title">{{semLivros}}</h5>
                    <br>
                    <a href="/livro/cadLivro" class="btn btn-sm btn-dark">Adicionar Livro</a>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>


<div class="offcanvas offcanvas-start" id="demo">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">
            Meu perfil
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        {{#if usuario.length}}
        {{#each usuario}}
        <div class="card mb-4">
            <img src="{{this.avatar}}" class="card-img-top" alt="Foto do Perfil">
            <hr>
            <div class="card-body">
                <h5 class="card-title">{{this.nome}}</h5>
                <br>
                <p><a href="/usuario/alteraUsuario/{{this._id}}" class="btn btn-sm btn-dark">Editar perfil</a></p>
                <p><a href="/usuario/estatisticas/{{this._id}}" class="btn btn-sm btn-outline-dark"><i
                            class="bi bi-pie-chart-fill"> Ver
                            minhas estatísticas</i></a></p>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card mb-4">
            <img src="/images/avatar-padrao.png" class="card-img-top" alt="Foto do Perfil">
            <div class="card-body">
                <a href="/usuario/cadUsuario" class="btn btn-sm btn-dark">Criar perfil</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>